<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.FACT.controller.LoginController">
   <children>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <top>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="brandingImageView" fitHeight="200.0" fitWidth="700.0" layoutX="253.0" layoutY="8.0" pickOnBounds="true">
