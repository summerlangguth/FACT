<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.FACT.controller.EditSetController"
      minWidth="0.0" minHeight="0.0" prefWidth="-1.0" prefHeight="-1.0"
      maxWidth="1.7976931348623157E308" maxHeight="1.7976931348623157E308"
      stylesheets="@modern.css" styleClass="scene-root content card">

   <padding>
      <Insets left="40.0" right="40.0" top="20.0" bottom="20.0" />
   </padding>

   <children>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">

         <!-- Main content area -->
         <center>
            <VBox alignment="TOP_CENTER" spacing="24" BorderPane.alignment="CENTER">
               <padding>
                  <Insets top="40.0" bottom="40.0" left="60.0" right="60.0" />
               </padding>

               <children>
                  <!-- Page Title -->
                  <Label styleClass="page-title" text="Edit Key Sets">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>

                  <!-- Application Selection Section -->
                  <HBox spacing="16" alignment="CENTER_LEFT" maxWidth="900">
                     <children>
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                           <Label styleClass="form-label" text="Select Application" />
                           <ComboBox fx:id="ApplicationComboBox"
                                     styleClass="combo-box-lg"
                                     maxWidth="1.7976931348623157E308"
                                     minHeight="60.0" prefHeight="60.0"
                                     promptText="Select Application" />
                        </VBox>

                        <VBox spacing="8" alignment="BOTTOM_LEFT">
                           <Label styleClass="form-label" text="Total Rows" />
                           <Label fx:id="RowCountLabel" styleClass="info-label"
                                  prefHeight="60.0" alignment="CENTER_LEFT"
                                  text="">
                              <font>
                                 <Font size="16.0" />
                              </font>
                           </Label>
                        </VBox>
                     </children>
                  </HBox>

                  <!-- Table Section -->
                  <VBox spacing="12" maxWidth="900" VBox.vgrow="ALWAYS">
                     <TableView fx:id="table" editable="true"
                                prefHeight="300.0" maxWidth="1.7976931348623157E308"
                                VBox.vgrow="ALWAYS">
                        <columns>
                           <TableColumn fx:id="colCategory" prefWidth="180.0"
                                        text="Category" />
                           <TableColumn fx:id="colDifficulty" prefWidth="140.0"
                                        text="Difficulty" />
                           <TableColumn fx:id="colDescription" prefWidth="340.0"
                                        text="Description" />
                           <TableColumn fx:id="colKeyBind" prefWidth="140.0"
                                        text="Key Bind" />
                        </columns>
                     </TableView>
                  </VBox>

                  <!-- Keybind Capture Section -->
                  <VBox spacing="12" maxWidth="900" styleClass="surface">
                     <padding>
                        <Insets top="20.0" bottom="20.0" left="24.0" right="24.0" />
                     </padding>

                     <children>
                        <Label styleClass="form-label"
                               text="Set Keybind for Selected Row">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>

                        <HBox spacing="12" alignment="CENTER_LEFT">
                           <children>
                              <TextField fx:id="KeyBindCaptureField"
                                         styleClass="text-field-lg"
                                         HBox.hgrow="ALWAYS"
                                         minHeight="50.0" prefHeight="50.0"
                                         promptText="Click here and press shortcut (e.g., Ctrl+C)">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </TextField>

                              <Button mnemonicParsing="false"
                                      onAction="#onApplyKeyBindToSelected"
                                      styleClass="button-primary,button-lg"
                                      prefHeight="50.0" prefWidth="180.0"
                                      text="Apply to Selected" textFill="WHITE">
                                 <font>
                                    <Font name="Helvetica Bold" size="15.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Action Buttons -->
                  <HBox spacing="16" alignment="CENTER" styleClass="action-buttons">
                     <HBox.margin>
                        <Insets top="16.0" />
                     </HBox.margin>

                     <children>
                        <Button mnemonicParsing="false"
                                onAction="#onDeleteSelected"
                                styleClass="button-danger,button-xl"
                                prefHeight="60.0" prefWidth="220.0"
                                text="Delete Selected" textFill="WHITE">
                           <font>
                              <Font name="Helvetica Bold" size="20.0" />
                           </font>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />

                        <Button mnemonicParsing="false"
                                onAction="#onSaveChanges"
                                styleClass="button-success,button-xl"
                                prefHeight="60.0" prefWidth="220.0"
                                text="Save Changes" textFill="WHITE">
                           <font>
                              <Font name="Helvetica Bold" size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</VBox>