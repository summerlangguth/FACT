<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #fff;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.FACT.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <ImageView pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../../../images/logo.png"/>
            </image>
        </ImageView>
        <Label text="Welcome back, User!">
            <font>
                <Font name="Helvetica Neue Light" size="60.0" />
            </font>
        </Label>
        <Label text="Streak: x">
            <font>
                <Font name="Helvetica Neue Light" size="30.0" />
            </font>
        </Label>
        <Button prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #3578C9;" text="Practice" textFill="WHITE">
            <font>
                <Font name="Helvetica Bold" size="30.0" />
            </font>
        </Button>
        <Button prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: #3578C9;" text="Logout" textFill="WHITE">
            <font>
                <Font name="Helvetica Bold" size="30.0" />
            </font>
        </Button>
    </children>
</VBox>
